{
  "name": "@collablist/database",
  "version": "1.0.0",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "module": "./dist/index.mjs",
  "files": [
    "dist/**"
  ],
  "scripts": {
    "build": "tsup",
    "clean": "rimraf .turbo node_modules dist",
    "dev": "tsup --watch",
    "predev": "pnpm db:generate && pnpm db:push",
    "db:generate": "prisma generate",
    "db:push": "prisma db push --skip-generate",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate": "prisma migrate deploy",
    "db:seed": "prisma db seed && ts-node prisma/seeders/dummy.ts"
  },
  "dependencies": {
    "@faker-js/faker": "^7.5.0",
    "@prisma/client": "^4.3.1",
    "bcryptjs": "^2.4.3"
  },
  "prisma": {
    "seed": "ts-node src/seed/index.ts"
  },
  "devDependencies": {
    "@collablist/eslint-config-custom": "workspace:*",
    "@collablist/tsconfig": "workspace:*",
    "@types/bcryptjs": "^2.4.2",
    "@types/node": "^16.0.0",
    "eslint": "^8.0.1",
    "prisma": "^4.3.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.0.0",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  }
}