{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    ".env.development.local"
  ],
  "pipeline": {
    "build": {
      "outputs": ["dist/**"],
      "dependsOn": ["^build"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^predev"]
    },
    "predev": {
      "cache": false,
      "experimentalPassThroughEnv": [
        "DB_URL"
      ]
    },
    "clean": {
      "cache": false
    },
    "db:studio": {
      "cache": false
    }
  }
}